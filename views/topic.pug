extends layout

block content
    .inner
        .subheader
            .subheader__section.subheader__section--back
                a(href=`/category/id/${topic.category}`)
                    != h.icon('arrow_back')
            .subheader__section
                h2= topic.name
        .actionbar
            .actionbar__action.actionbar__action--populate
                        form.populateClues(method="GET" action=`/topic/${topic._id}/populateClues`)
                            input(type="submit" value="Populate Clues" class="button")
        if topic.clues
            .clues
                each clue in topic.clues
                    .clue
                        .clue__body
                            div= clue.text
                            p= clue.score
